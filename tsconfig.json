{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noUnusedParameters": true
  },
  "include": ["./typings/**/*", "./src/**/*", "./test/**/*"],
  "exclude": ["./node_modules", "./dist", "./lib"]
}
