{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "jsx": "react"
  },
  "include": [
    "./global.d.ts"
  ],
  "exclude": [
    "typings/globals",
    "typings/modules",
    "node_modules",
    "dist",
    "lib",
    "test"
   ]
}
